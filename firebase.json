{
  "hosting": {
    "public": "_site",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [{
      "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
      "headers" : [{
        "key" : "Access-Control-Allow-Origin",
        "value" : "*"}]
    }, {
      "source" : "**/*.@(jpg|jpeg|gif|png|svg)",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "max-age=7200"}]
    }, {
      "source" : "**/*.@(css|js)",
      "headers" : [{
        "key" : "Cache-Control",
        "value" : "max-age=3600"}]
    }]
  }
}
